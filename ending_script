function init(self)
	gui.set_enabled(gui.get_node("ending_root"), false)
end

function on_message(self, message_id, message, sender)
	if message_id == hash("attempt_end") then
		gui.set_enabled(gui.get_node("ending_root"), true)

		msg.post("main:/hero#hero", "disable_player")
		msg.post("#", "acquire_input_focus")
		msg.post("main:/wave#wave1", "disable")
		msg.post("main:/gui#main", "hide_hud")
		msg.post("main:/gui#main", "hide_warning")

		print("ENDING SCREEN SHOWN")
	end
end
